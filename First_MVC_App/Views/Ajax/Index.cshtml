@model PeopleViewModel
@{
    ViewData["Title"] = "Title";
}

<div class="ajax">
    <button onclick="getPeople()" class="btn btn-dark">Show People</button>
</div>

<div id="details-for-person"></div>
<div id="show-getPeople-section"></div>

<script>

    function getPeople() {
        $.ajax({
            type: "POST",
            url: "Ajax/FindAll",
            success: function(response) {
                $("#show-FindAll-section").html(response)
            }
        })
    }
    function delete() {
        var id = $("#person-id").val();

        $.ajax({
            type: "POST",
            url: "Ajax/Delete?id=" + id,
            success: function(response) {
                $("#details-for-person").html("")
                $("#show-FindAll-section").html(response);
            }
        })
    }
    function getInfo() {
        var id = $("#person-id").val();

        $.ajax({
            type: "POST",
            url: "Ajax/ShowPersonDetail?id=" + id,
            success: function (response) {
                $("#details-for-person").html(response);
            }
        })
    }
</script>