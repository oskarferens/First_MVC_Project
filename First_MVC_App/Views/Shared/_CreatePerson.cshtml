@model CreatePersonViewModel

<form asp-controller="People" asp-action="CreatePerson" method="post">
    <h4 class="fw-bold mb-2">Add new person to list: </h4>
    <br />

    <div class="form">
        <label asp-for="Name" class="fw-bold"></label>
        <input class="rounded border-light m-1" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form">
        <label asp-for="PhoneNumber" class="fw-bold"></label>
        <input class="rounded border-light m-1" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form">
        <label asp-for="City" class="fw-bold"></label>
        <input class="rounded border-light m-1" asp-for="City" />
        <span asp-validation-for="City"></span>
    </div>
    <div>
        <input class="form-button btn btn-success m-1" type="submit" value="Add Person" />
    </div>
</form>
